{
  "name": "taller",
  "version": "3.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "build-for-electron": "ng build --base-href ./",
    "electron:start": "electron .",
    "electron:build-exe": "npm run build-for-electron && electron-builder --win nsis --x64 --publish onTag"
  },
  "description": "Control de Taller para Grupo Ferretero Don Pedro",
  "author": {
    "name": "Freddy Marcel Flores Chavarria",
    "email": "dev.gfdp@gmail.com"
  },
  "main": "main.js",
  "build": {
    "appId": "com.gfdp.taller",
    "productName": "GFDP Taller",
    "directories": {
      "output": "release-builds"
    },
    "files": [
      "dist/taller_prod/browser/**/*",
      "main.js",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "owner": "GFDPDev",
      "repo": "taller"
    },
    "win": {
      "target": "nsis",
      "icon": "logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GFDP Taller"
    }
  },
  "private": true,
  "dependencies": {
    "@amcharts/amcharts4": "^4.10.36",
    "@angular/animations": "^20.3.9",
    "@angular/cdk": "~20.2.11",
    "@angular/common": "^20.3.9",
    "@angular/compiler": "^20.3.9",
    "@angular/core": "^20.3.9",
    "@angular/forms": "^20.3.9",
    "@angular/material": "~20.2.11",
    "@angular/material-moment-adapter": "^20.2.11",
    "@angular/platform-browser": "^20.3.9",
    "@angular/platform-browser-dynamic": "^20.3.9",
    "@angular/router": "^20.3.9",
    "ag-grid-angular": "^31.0.3",
    "ag-grid-community": "^31.0.3",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "jquery": "^3.7.0",
    "jspdf": "^2.5.1",
    "moment": "^2.29.4",
    "ngx-mat-select-search": "^8.0.2",
    "rxjs": "~7.8.0",
    "sweetalert2": "^11.7.12",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^20.3.8",
    "@angular/cli": "~20.3.8",
    "@angular/compiler-cli": "^20.3.9",
    "@types/jasmine": "~4.3.0",
    "autoprefixer": "^10.4.21",
    "jasmine-core": "~4.5.0",
    "electron": "^39.2.1",
    "electron-builder": "^26.0.12",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "~5.8.3"
  }
}
